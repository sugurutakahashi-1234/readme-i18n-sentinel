{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "readme-i18n-sentinel Configuration",
  "description": "Configuration schema for readme-i18n-sentinel",
  "type": "object",
  "properties": {
    "source": {
      "type": "string",
      "minLength": 1
    },
    "target": {
      "type": "string",
      "minLength": 1
    },
    "checks": {
      "default": {
        "checkLineCount": true,
        "checkChangedLines": true,
        "strictHeadings": false
      },
      "type": "object",
      "properties": {
        "checkLineCount": {
          "default": true,
          "type": "boolean"
        },
        "checkChangedLines": {
          "default": true,
          "type": "boolean"
        },
        "strictHeadings": {
          "default": false,
          "type": "boolean"
        }
      },
      "required": ["checkLineCount", "checkChangedLines", "strictHeadings"],
      "additionalProperties": false
    },
    "output": {
      "default": {
        "json": false
      },
      "type": "object",
      "properties": {
        "json": {
          "default": false,
          "type": "boolean"
        }
      },
      "required": ["json"],
      "additionalProperties": false
    }
  },
  "required": ["source", "target", "checks", "output"],
  "additionalProperties": false
}
