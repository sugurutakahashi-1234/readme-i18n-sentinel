{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "readme-i18n-sentinel Configuration",
  "description": "Configuration schema for readme-i18n-sentinel",
  "type": "object",
  "properties": {
    "source": {
      "type": "string",
      "minLength": 1
    },
    "target": {
      "type": "string",
      "minLength": 1
    },
    "checks": {
      "default": {
        "lines": true,
        "changes": true,
        "headingsMatchSource": true
      },
      "type": "object",
      "properties": {
        "lines": {
          "default": true,
          "type": "boolean"
        },
        "changes": {
          "default": true,
          "type": "boolean"
        },
        "headingsMatchSource": {
          "default": true,
          "type": "boolean"
        }
      },
      "required": ["lines", "changes", "headingsMatchSource"],
      "additionalProperties": false
    },
    "output": {
      "default": {
        "json": false
      },
      "type": "object",
      "properties": {
        "json": {
          "default": false,
          "type": "boolean"
        }
      },
      "required": ["json"],
      "additionalProperties": false
    }
  },
  "required": ["source", "target", "checks", "output"],
  "additionalProperties": false
}
